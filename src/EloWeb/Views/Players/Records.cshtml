@model EloWeb.ViewModels.Records

@{
    ViewBag.Title = "Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Records</h2>

<div>
    <h4>Records</h4>
    <hr />   
    
    <table>
        <tr>
            <th>
                All-Time Rating (@Model.MostRatingsPointsEver.First().MaxRating)
            </th>
        </tr>
        @foreach (var player in Model.MostRatingsPointsEver)
        {
            <tr>
                <td>
                    @player.Name
                </td>
            </tr>
        }
    </table>

    <hr />

    <table>
        <tr>
            <th>
                Current Rating (@Model.CurrentTopRanked.First().Rating)
            </th>
        </tr>
        @foreach (var player in Model.CurrentTopRanked)
        {
            <tr>
                <td>
                    @player.Name
                </td>
            </tr>
        }
    </table>
        
    <hr />

    <table>
        <tr>
            <th>
                All-Time Winning Streak (@Model.LongestWinningStreak.First().LongestWinningStreak)
            </th>
        </tr>
        @foreach (var player in Model.LongestWinningStreak)
        {
            <tr>
                <td>
                    @player.Name
                </td>
            </tr>
        }
    </table>
    
    <hr />

    <table>
        <tr>
            <th>
                Current Winning Streak (@Model.CurrentWinningStreak.First().CurrentWinningStreak)
            </th>
        </tr>
        @foreach (var player in Model.CurrentWinningStreak)
        {
            <tr>
                <td>
                    @player.Name
                </td>
            </tr>
        }
    </table>

    <hr />

    <table>
        <tr>
            <th>
                Highest Win Rate (@Model.BestWinRate.First().WinRate)
            </th>
        </tr>
        @foreach (var player in Model.BestWinRate)
        {
            <tr>
                <td>
                    @player.Name
                </td>
            </tr>
        }
    </table>

</div>
